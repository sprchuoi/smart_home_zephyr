 * NET Core Device Tree Overlay for nRF5340 DK
 * OpenThread + BLE radio management
 */

/ {
	/* NET core manages radio for Thread (802.15.4) and BLE */
	chosen {
		zephyr,ieee802154 = &ieee802154;
		zephyr,ipc = &ipc0;
		zephyr,ipc-shm = &sram0_shared;
	};
};

/* Shared memory region for IPC (must match APP core) */
&sram0_shared {
	reg = <0x20070000 0x10000>;
};

/* Enable IEEE 802.15.4 radio for OpenThread */
&radio {
	status = "okay";
};

/* IPC for communication with APP core */
&ipc0 {
	status = "okay";
};

/* MBOX for IPC service */
&mbox {
	status = "okay";
};

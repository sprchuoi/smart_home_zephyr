/ {
	/* NET core manages radio for Thread (802.15.4) and BLE */
	chosen {
		zephyr,ieee802154 = &ieee802154;
	};
};

/* Enable IEEE 802.15.4 radio for OpenThread */
&radio {
	status = "okay";
};

/* IPC for communication with APP core */
&ipc0 {
	status = "okay";
};
